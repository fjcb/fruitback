
= simple_form_for [@site, @idea], url: @form_url do |f|
  - if @idea.errors.any?
    #error_explanation
      %h2
        = pluralize(@idea.errors.count, "error")
        prohibited this site from being saved:
      %ul
        - @idea.errors.full_messages.each do |msg|
          %li= msg
          
  = f.input :title
  = f.input :description, :as => :text, :input_html => { rows: 5 } 
  
  = f.button :submit
  