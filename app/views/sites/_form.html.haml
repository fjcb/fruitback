- if can? :create, @site
  
  %h2 Add a site

  = simple_form_for(@site) do |f|
    - if @site.errors.any?
      #error_explanation
        %h2
          = pluralize(@site.errors.count, "error")
          prohibited this site from being saved:
        %ul
          - @customer.errors.full_messages.each do |msg|
            %li= msg
            
    = f.input :name, placeholder: "Your site's name"
    = f.input :url, placeholder: "Your site's url"
    
    = f.button :submit