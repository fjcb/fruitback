- if flash[:notice]
  %div.alert.alert-success.alert-custom.fade.in
    %button.close{"data-dismiss" => "alert", :type => "button"}
      &times;
    = flash[:notice]

- if flash[:alert]
  %div.alert.alert-error.alert-custom.fade.in
    %button.close{"data-dismiss" => "alert", :type => "button"}
      &times;
    = flash[:alert]
