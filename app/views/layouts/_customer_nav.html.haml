.container.header
  .navbar.navbar-inverse
    .navbar-inner
      .container
        %a.brand.logo{:href => root_path}
          = image_tag 'logo.png'
        .nav-collapse
          %ul.nav.nav_custom
            %li{:class => "#{'active' if current_page?(root_path)}"}
              =link_to root_path do
                %i.icon-home.icon-white
                Home
            
            -if admin?
              %li{:class => "#{'active' if current_page?(customer_sites_path)}"}
                = link_to "All sites", customer_sites_path
              
              %li{:class => "#{'active' if current_page?(users_path)}"}
                = link_to "All users", users_path
              
            -elsif customer?
              %li{:class => "#{'active' if current_page?(customer_sites_path)}"}
                = link_to "My sites", customer_sites_path
              
            -elsif user_signed_in?
              %li{:class => "#{'active' if current_page?(sites_path)}"}
                = link_to "Sites I posted on", sites_path
            
            %li{:class => "#{'active' if current_page?(new_user_session_path)}"}
              - if user_signed_in?
                = link_to 'Logout', destroy_user_session_path, :method => :delete
              - else
                = link_to 'Login', new_user_session_path
                
          - if user_signed_in?
            %p.logged-in
              Logged in as
              = link_to current_user.name, user_path(current_user)
            
