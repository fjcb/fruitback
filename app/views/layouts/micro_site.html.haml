!!!
%html
  %head
    %title Fruitback
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body     
              
    .container
      - if notice
        %div.alert.alert-success
          = notice
          - #%a.close{"data-dismiss" => "alert", :href => "#"} &times;
      - if alert
        %p.alert.alert-error= alert
        
      = yield