= simple_form_for [@site, @idea, @response], url: url do |f|
  = f.error_notification
  = f.association :state,
    include_blank: false,
    label: false
  = f.input :text,
    input_html: { class: "input-xlarge", rows: 3 },
    placeholder: "Your response",
    label: false
  
  = f.button :submit, "Post response", class: "btn btn-success"
  
